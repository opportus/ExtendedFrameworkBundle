<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="opportus_extended_framework.default_template_engine" class="Opportus\ExtendedFrameworkBundle\TemplateEngine\TemplateEngine" public="false">
            <argument type="service" id="kernel" />
        </service>

        <service id="opportus_extended_framework.twig_template_engine" class="Opportus\ExtendedFrameworkBundle\TemplateEngine\TwigTemplateEngine" public="false">
            <argument type="service" id="twig" />
        </service>

    </services>

</container>
